    <script >
        let ul=document.querySelector("ul");
        function work(){
            let input=document.createElement("input");
            let right=document.createElement("button");
            let li=document.createElement("li");
            input.setAttribute("placeholder","write your task")
            right.innerHTML="&#10004;"   
            addTask.insertAdjacentElement("beforebegin",input);
            addTask.insertAdjacentElement("beforebegin",right);
            addTask.style.display="none"
            right.addEventListener("click",function (){
                li.innerText=input.value;
                li.style.borderBottom="1px solid grey"
                let cross=document.createElement("span");
                cross.innerHTML="&#10060;"
                cross.style.display="none"
                cross.style.zIndex="-1"
                
                li.insertAdjacentElement("beforeend",cross)
                li.addEventListener("mouseenter",function(){
                    cross.style.display="inline"
                    cross.style.cursor="pointer"
                    cross.addEventListener("click",function(){
                        li.remove()
                    })
                })
                li.addEventListener("mouseleave",function(){
                    cross.style.display="none"
                })
                ul.append(li);
                right.style.display="none";
                input.style.display="none"
                addTask.style.display="inline"
            })
            input.addEventListener("keypress",function (){
                if(event.code=="Enter"){
                    li.innerText=input.value;
                li.style.borderBottom="1px solid grey"
                let cross=document.createElement("span");
                cross.innerHTML="&#10060;"
                cross.style.display="none"
                cross.style.zIndex="-1"
                
                li.insertAdjacentElement("beforeend",cross)
                li.addEventListener("mouseenter",function(){
                    cross.style.display="inline"
                    cross.style.cursor="pointer"
                    cross.addEventListener("click",function(){
                        li.remove()
                    })
                })
                li.addEventListener("mouseleave",function(){
                    cross.style.display="none"
                })
                ul.append(li);
                right.style.display="none";
                input.style.display="none"
                addTask.style.display="inline"

                }
                
            })

        }
let addTask=document.querySelector("#button");
addTask.addEventListener("click",work) 

















        

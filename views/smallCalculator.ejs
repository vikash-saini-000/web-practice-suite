<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>extra</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <link rel="stylesheet" href="practice.css">
    <style>
        .container-fluid{
            background-color: goldenrod;
            width:50%;
            border-radius:1rem;
            
            transition: 1s ease 0.1s;
        }
        .container-fluid input{
            width: 100%;
            margin: 2rem 0;
            height: 3rem;
            border-radius: 2rem;
            padding-left:2rem ;
            appearance: none;
        }
        #main{
            width: 100%;
            margin: 2rem 0;
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            flex-direction: row;

        }
        .container-fluid h2{
            width: 100%;
            margin: 2rem 0;
            text-align: center;
            font-size: 3rem;
            font-weight: 900;

        }
        #result{
            width: 100%;
            margin: 2rem 0;
            font-size: 2rem;

        }
        #main button{
            margin-bottom: 1rem;
            border-radius: 1rem;
            padding: 0.5rem;
            
        }
        .container-fluid:hover{
            transform: scale(0.95);
        }
        @media(max-width:790px){
            .container-fluid{
                width: 100%;
            }
        }
        button:active{
            transform: scale(0.95);}













    </style>
    
    
</head>
<body>
    <form method="post" action="/todolist">
        <div class="container-fluid mt-5">
                <h2>Small Calculator</h2>
                <input type="number" id="num1" placeholder="enter first number">
                <input type="number" id="num2" placeholder="enter second number">
                <div id="main">
                    <button type="button"  id="b1"  onclick="add()">Add</button>
                    <button type="button"  id="b2"  onclick="sub()">Subtraction</button>
                    <button type="button"  id="b3"  onclick="mul()">Multipliction</button>
                    <button type="button"  id="b4"  onclick="div()">Division</button>
                    <button type="button"  id="b5"  onclick="pow()">Power</button>
                    <button type="button"  id="b6"  onclick="rem()">Reminder</button>
                    <button type="button"  id="b7"  onclick="per()">Percentege</button>
                

                </div>
                <div id="result"></div>
        
        














         </div>
         <button type="submit" class="btn btn-outline-dark btn-lg px-5">next</button>
    </form>
    
        
            
        
        
    
    
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
    <script >
        

        function add(){
            let a=parseInt(document.getElementById("num1").value);
            let b=parseInt(document.getElementById("num2").value);
            document.getElementById("result").innerText=`ans is ${a+b}`
        }
        function sub(){
            let a=parseInt(document.getElementById("num1").value);
            let b=parseInt(document.getElementById("num2").value);
            document.getElementById("result").innerText=`ans is ${a-b}`
            
        }
        function mul(){
            let a=parseInt(document.getElementById("num1").value);
            let b=parseInt(document.getElementById("num2").value);
            document.getElementById("result").innerText=`ans is ${a*b}`
            
        }
        function div(){
            let a=parseInt(document.getElementById("num1").value);
            let b=parseInt(document.getElementById("num2").value);
            document.getElementById("result").innerText=`ans is ${a/b}`
            
        }
        function pow(){
            let a=parseInt(document.getElementById("num1").value);
            let b=parseInt(document.getElementById("num2").value);
            document.getElementById("result").innerText=`ans is ${a**b}`
            
        }
        function rem(){
            let a=parseInt(document.getElementById("num1").value);
            let b=parseInt(document.getElementById("num2").value);
            document.getElementById("result").innerText=`ans is ${a%b}`
            
        }
        function per(){
            let a=parseInt(document.getElementById("num1").value);
            let b=parseInt(document.getElementById("num2").value);
            document.getElementById("result").innerText=`ans is ${a*b/100}`
            
        }
        

    </script>
    
</body>
</html>